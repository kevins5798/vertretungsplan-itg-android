<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:background="@color/bg_lightgrey"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Std."
        android:textColor="@color/primary"
        android:id="@+id/text_view_vertretungen_period"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Klasse"
        android:textColor="@color/primary"
        android:id="@+id/text_view_vertretungen_class"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/text_view_vertretungen_period"
        android:layout_toEndOf="@id/text_view_vertretungen_period"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fach"
        android:id="@+id/text_view_vertretungen_subject"
        android:layout_centerVertical="true"
        android:textColor="@color/primary"
        android:layout_toRightOf="@id/text_view_vertretungen_class"
        android:layout_toEndOf="@id/text_view_vertretungen_class"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kommentar"
        android:id="@+id/text_view_vertretungen_comment"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/primary"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/text_view_vertretungen_subject"/>

</RelativeLayout>