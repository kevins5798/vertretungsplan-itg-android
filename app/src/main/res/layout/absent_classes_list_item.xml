<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingBottom="8dp" android:paddingTop="8dp">



    <TextView
        android:id="@+id/text_view_absent_classes_period_range"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_centerVertical="true"
        android:textColor="@color/textcolor"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/text_view_absent_classes_class"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_centerVertical="true"
        android:textColor="@color/textcolor"
        android:layout_toRightOf="@id/text_view_absent_classes_period_range"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/text_view_absent_classes_comment"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view_absent_classes_class"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/textcolor"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>
